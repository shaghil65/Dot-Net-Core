@model List<Category>

<div class="container">

    <div class="row pt-4">
        <div class="col-10">
            <h2>Categories</h2>
        </div>
        <div class="col-2">
            <a type="button" class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-square"></i>   Add Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>DisplayOrder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                </tr>

            }
        </tbody>
    </table>
</div>