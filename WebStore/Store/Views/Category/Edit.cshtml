@model Category
<h2 class="pt-4">Edit Category</h2>

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name" class="form-label mt-4"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="DisplayOrder" class="form-label mt-4"></label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" placeholder="Enter Order">
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <a class="btn btn-outline-secondary form-control" asp-area="" asp-controller="Category" asp-action="Index">Cancel</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary form-control">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}